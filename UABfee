<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UAB Topup Fee</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="styles.css" rel="stylesheet"> <!-- Main CSS file ကို link ချိတ်ပါ -->
</head>
<body class="light-theme">
    <div class="container">
        <h1>UAB Pay/ Visa card topup fee</h1>
        <div id="feeTables" class="fee-tables">
            <div class="loading">Loading fee table...</div>
        </div>
    </div>

    <script src="script.js"></script> <!-- Main JavaScript file ကို link ချိတ်ပါ -->
    <script>
        // UAB fee table ကိုပဲ specific ပြဖို့ function
        async function loadUABFeeTable() {
            const rows = await fetchFeeData('uab');
            const feeTablesDiv = document.getElementById('feeTables');

            if (rows) {
                let tableHTML = `<table class="fee-table"><thead><tr>`;
                rows[0].forEach(header => {
                    tableHTML += `<th>${header}</th>`;
                });
                tableHTML += '</tr></thead><tbody>';

                for (let i = 1; i < rows.length; i++) {
                    tableHTML += '<tr>';
                    rows[i].forEach((cell, index) => {
                        tableHTML += `<td>${index > 0 && !isNaN(cell.trim()) ? cell.trim() + ' Ks' : cell}</td>`;
                    });
                    tableHTML += '</tr>';
                }
                tableHTML += '</tbody></table>';

                feeTablesDiv.innerHTML = tableHTML;
            } else {
                feeTablesDiv.innerHTML = '<div class="error">Failed to load fee table.</div>';
            }
        }

        // Page load ဖြစ်တာနဲ့ UAB fee table ကို ပြမယ်
        document.addEventListener('DOMContentLoaded', loadUABFeeTable);
    </script>
</body>
</html>
